<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/fore4_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fore4_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="今天星期三"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore4_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore4_day"
                android:singleLine="true"
                android:text="溫度"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore4_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore4_temp"
                android:singleLine="true"
                android:text="晴"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore4_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore4_weather"
                android:singleLine="true"
                android:text="微風"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fore5_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/fore4_content">

            <TextView
                android:id="@+id/fore5_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="今天星期三"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore5_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore5_day"
                android:singleLine="true"
                android:text="溫度"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore5_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore5_temp"
                android:singleLine="true"
                android:text="晴"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore5_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore5_weather"
                android:singleLine="true"
                android:text="微風"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fore6_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/fore5_content">

            <TextView
                android:id="@+id/fore6_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="今天星期三"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore6_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore6_day"
                android:singleLine="true"
                android:text="溫度"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore6_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore6_temp"
                android:singleLine="true"
                android:text="晴"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fore6_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fore6_weather"
                android:singleLine="true"
                android:text="微風"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
